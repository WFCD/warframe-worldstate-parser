{
  "exclude": [
    "node_modules",
    "test"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2024", // set to the *lowest* target you support
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  }
}