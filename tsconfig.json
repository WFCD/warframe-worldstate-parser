{
  "exclude": [
    "node_modules",
    "test"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2024", // set to the *lowest* target you support
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/models/*": ["./lib/models/*"],
      "@/models": ["./lib/models/index"],
      "@/supporting/*": ["./lib/supporting/*"],
      "@/supporting": ["./lib/supporting/index"],
      "@/data/*": ["test/data/*"],
      "@/*": ["./lib/*"]
    }
  }
}
